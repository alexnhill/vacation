<!DOCTYPE html>
<html>
  <head>
    <title>Vacation</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all' %>

    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div class="topnav">
      <%= link_to "RECESS", root_path %>
      <% if logged_in? %>
        <%=link_to "My trips", user_path(current_user) %>
        <%=link_to "Create New Trip", new_trip_path %>
        <%=link_to "LOG OUT", logout_path, method: :delete %>
      <% else %>
        <%= link_to "SIGN UP", signup_path %>
        <%= link_to "LOGIN", login_path %>
      <% end %>
    </div>

      <% if logged_in? %>
        <h2>Welcome, <%= current_user && current_user.first_name.capitalize %>!</h2>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>
