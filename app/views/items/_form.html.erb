<%= render partial: '/errors' %>
<div id="locationField">
  <input id="autocomplete" placeholder="Add a New Place" onFocus="geolocate()" onFocus="searchLocal()" type="text"></input>
</div>

<section id="item-new-google-maps-form">
  <%= form_for [@trip, @item], :class => 'item-category' do |i| %>
     <div>
        <p><%= i.select :category, ["Choose A Category", "Location", "Food", "Lodging", "Attraction", "Nightlife"] %></p>
     </div>
    <div id="item-new-google-maps-submit">
      <p><%= i.submit :class => 'create-event-button' %></p>
      <button class="create-other-button"><a href="#toggle">Or create your own item</a></button>
    </div>

    <div class="not-for-user-input">
      <div>
        <p><%= i.label :title %></p>
        <p><%= i.text_field :title %></p>
      </div>

      <div>
        <p><%= i.label :lookup %></p>
        <p><%= i.text_field :lookup %></p>
      </div>

      <div>
        <p><%= i.label :address %></p>
        <p><%= i.text_field :address %></p>
      </div>

      <div>
        <p><%= i.label :image %></p>
        <p><%= url_field(:item, :image) %></p>
      </div>

      <div>
        <p><%= i.label :date %></p>
        <p><%= date_field(:item, :date) %></p>
      </div>

      <div>
        <p><%= i.label :body %></p>
        <p><%= i.text_field :body %></p>
      </div>
    </div>
  <% end %>
</section>
