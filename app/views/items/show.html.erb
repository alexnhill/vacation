<div id="item-section">
  <div class="wrapper">
    <div id="item-container">
      <div id="image-details">
        <div id="item-image">
          <img src="<%= @item.image %>" alt="<%= @item.body %> image" />
        </div>
        <div id="item-details">
          <div class="item-wrapper">
            <h1><%= @item.title %></h1>
            <p><%= @item.body %></p>
            <p><%= @item.address %></p>
            <p>Added by: <%= @item.user.email %></p>
            <div id="item-vote">

              <form method="post" action= "/trips/<%=@trip.id%>/items/<%=@item.id%>/votes" id="vote-item-form">
                <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
                <button class="vote-button" type="submit" name="up_down" value="1"> 👍 </button>
                <% total_vote = 0 %>
                <% @item.votes.each do |vote| %>
                  <% total_vote += vote.up_down  %>
                <% end %>
                <input class="vote-count" type="text" value="<%= total_vote %> votes" />
                <button class="vote-button" type="submit" name="up_down" value="-1" >👎</button>
              </form>
            </div>
            <%= link_to 'Edit Item', edit_trip_item_path %>

            <%= form_for [@trip, @item] do |i| %>
              <div>


                <div>
                  <p><%= i.label :date %></p>
                  <p><%= date_field(:item, :date) %></p>
                </div>
                <% @categories = ['Event', 'Transportation', 'Lodging', 'Other'] %>

                <div>
                  <p><%= i.label :category %></p>
                  <p><%= i.select :category, @categories, {:prompt => 'Select Category'}, :required => true %></p>
                </div>









                <div id="item-new-other-submit">
                  <%= i.submit %>
                </div>

              </div>
            <% end %>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>
