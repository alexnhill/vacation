<section class="form">
  <article class="form-wrapper">
    <%= render partial: "/errors" %>

    <%= form_for @trip do |f|%>
      <div class="form-section">
        <%= f.label :name %>:
        <%= f.text_field :name %><br />
      </div>
      <div class="form-section">
        <%= f.label :location %>
        <%= f.text_field :location %><br />
      </div>
      <div class="form-section">
        <%= f.label :description%>
        <%= f.text_area :description%>
      </div>
      <div class="form-section">
        <%= f.label :start_date %>
        <%= f.date_field :start_date %>
      </div>
      <div class="form-section">
        <%= f.label :end_date %>
        <%= f.date_field :end_date %>
      </div>
      <div class="form-section">
        <%= f.submit%>
      </div>
      <div class="delete-section">
        <%= link_to 'Delete this trip', [@trip],method: :delete, data: { confirm:
                                                'Are you sure?' }, :class => 'delete-button'%>
      </div>
    <% end %>
  </article>
</section>
